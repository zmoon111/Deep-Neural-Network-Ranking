if [ $# -ne 4 ]
then
    echo 'usage: sh gen_patches.sh image_path image_size images_per_batch savepath'
    exit -1;
fi

echo 'find images'
find $1 -name "*.jpg" > list
echo 'shuffle list'
python shuffle.py list train_list
echo 'generate ground truth list'
cat train_list | awk -F '/' '{print $3}' > ground_truth
echo 'generate label list'
ls $1 > label
nfiles=`wc -l list | awk '{print $1}'`
echo 'total ' $nfiles ' samples'
batches=`echo $nfiles/$3 + 1 | bc`
echo 'generate' ${batches} 'batches'
rm -rf $4
mkdir -p $4
for((i=1;i<${batches};i++));
do
    #python gen_train.py $i ${2} ${3} ${4}
    python gen_train.py $i ${2} ${3} ${4} &
done
python gen_train.py 0 ${2} ${3} ${4}
sleep 300
ls ${4} > batch_list
python gen_meta.py $4

